<section>
  <div class= "one_user">
    <div class="profile">
      <img src='<%= @user.photo %>' alt='<%= @user.name %> thumbnail' />
    </div>
    <div class="user_info">
      <h1 class="user-head"><%= @user.name %></h1>
      <p class="user-para">Number of posts: <%= @user.posts_counter || 0 %></p>
    </div>
  </div>

  <% @posts.each do |post| %>
    <%= render post %>
    <div>
        <%= post.recent_comments.each do |comment| %>
          <p><%= comment.author.name %>: <%= comment.text %></p>
        <% end %>
    </div>
  <%end%>

  <button class="list_btn">pagination</button>
</section>