<div id="<%= dom_id post %>" class="user_con">
    <div class="user_data_post">
      <h2><%= link_to "Post # #{post.id}", user_post_path(@user.id, post.id), class:"anything" %> </h2>
      <h3><%= post.title%></h3>
      <p><%= post.text%><p>
      <p>Number of comments: <%= post.comments_counter %> <span>Number of likes: <%= post.likes_counter %></span></p>
    </div>

  </div>

  <div class="comments">
    <% post.recent_comments.each do |comment| %>
      <h4><%= comment.author.name%>: <%= comment.text%></h4>
    <%end%>
  </div>
</div>